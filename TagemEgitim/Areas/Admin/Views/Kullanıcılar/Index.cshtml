@model IEnumerable<TagemEgitim.Models.Kullar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.kulname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kulpassEnc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hatirla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hatali)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kilitliTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.admin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kulname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kulpassEnc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hatirla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hatali)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kilitliTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.admin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
