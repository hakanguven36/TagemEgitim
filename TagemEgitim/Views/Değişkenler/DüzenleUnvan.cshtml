@model TagemEgitim.Models.Ünvan

<div class="row">
    <div class="col-md-4">
        <form id="unvanDuzenleForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="isim" class="control-label"></label>
                <input asp-for="isim" class="form-control" />
                <span asp-validation-for="isim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    $("#unvanDuzenleForm").submit(function (e) {
        e.preventDefault();
        DuzenleUnvan($(this).serialize());
    })
</script>