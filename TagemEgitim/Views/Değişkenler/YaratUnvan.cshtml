@model TagemEgitim.Models.Ünvan


<div class="row">
    <div class="col-md-4">
        <form id="yaratUnvanForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="isim" class="control-label"></label>
                <input asp-for="isim" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Yarat" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<script>
    $("#yaratUnvanForm").submit(function (e) {
        e.preventDefault();
        YaratUnvan($(this).serialize());
    })
</script>